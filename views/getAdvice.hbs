
<!-- getAdviceForm container -->
<div class="col-xs-4 col-sm-4 col-md-4 transbox" id="getAdviceForm">
    <form class="form" action="/getAdvice" method="post" enctype="application/x-www-form-urlencoded">
        <br>
      {{#if advice}}
        <div class="well well-sm flex-container-center">
          <input type="hidden" id="cityWeather" value="{{cityWeather}}">
          <input type="hidden" id="stateCountry" value="{{stateCountry}}">
            <p id="city">{{city}}</p>
        </div>
        <div class="well well-lg">
            <p id="adviceText">{{advice.advice_text}}</p>
            <p id="author">-- {{advice.user.username}}</p>
        </div>
      {{else}}
        <div class="well well-sm flex-container-center">
          <p>No advice found!</p>
        </div>
      {{/if}}
      <div class="form-group citySelect">
          <br>
          <label for="citySelect" class="control-label"><i class="fa fa-map-marker orange" aria-hidden="true"></i>&nbsp;&nbsp;Enter City</label><br>
          <input type="text" name="selectCity" class="f_elem_city form-control" id="citySelect" value="{{city}}">

      </div>
      <div class="form-group">
          <label for="monthSelect" class="control-label"><i class="fa fa-sun-o orange" aria-hidden="true"></i>&nbsp;&nbsp;Choose Month</label>
          <select class="form-control" name="selectSeason" id="monthSelect">
              <option data-month="January" value="1">January</option>
              <option data-month="February" value="2">February</option>
              <option data-month="March" value="3">March</option>
              <option data-month="April" value="4">April</option>
              <option data-month="May" value="5">May</option>
              <option data-month="June" value="6">June</option>
              <option data-month="July" value="7">July</option>
              <option data-month="August" value="8">August</option>
              <option data-month="September" value="9">September</option>
              <option data-month="October" value="10">October</option>
              <option data-month="November" value="11">November</option>
              <option data-month="December" value="12">December</option>

          </select>
      </div>
      <div class="form-group">
          <label for="adviceSelect" class="control-label"><i class="fa fa-comments-o orange" aria-hidden="true"></i>&nbsp;&nbsp;Choose Type of Advice</label>
          <select class="form-control" name="selectAdvice" id="adviceSelect">
              <option value="1">Things to do</option>
              <option value="2">Things to avoid</option>
              <option value="3">Things to eat</option>
          </select>
      </div>
      <div class="form-group btn-lg btn-block">
          <button class="btn btn-lg btn-block" type="submit" name="getAdvice" id="getAdvice"><i class="fa fa-globe" aria-hidden="true"></i>&nbsp;&nbsp;I want advice</button>
          <button class="btn btn-lg btn-block" type="submit" name="giveAdvice" id="giveAdvice"><i class="fa fa-plane" aria-hidden="true"></i>&nbsp;&nbsp;I have advice</button>
      </div>
    </form>
</div>
<!-- end getAdviceForm -->
<!-- weatherBox container -->
<div class="col-xs-2 col-sm-2 col-md-2 transbox" id="weatherBox">

    <h4>Typical Weather for</h4>
    <input type="hidden" id="monthWeather"value="{{month}}">
    <h3 id="monthTxt">{{month}}</h3>
    <h4>High Temperatures</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/hot.png" alt="sun icon" />
        </div>
        <div class="col-xs-4">
            <p id="highF"></p>
        </div>
        <div class="col-xs-4">
            <p id="highC"></p>
        </div>
    </div>

    <h4>Low Temperatures</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/cold.png" alt="snow icon" />
        </div>
        <div class="col-xs-4">
            <p id="lowF"></p>
        </div>
        <div class="col-xs-4">
            <p id="lowC"></p>
        </div>
    </div>

    <h4>Chance of Rain</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/rain.png" alt="rain icon" />
        </div>
        <div class="col-xs-2">
            <p></p>
        </div>
        <div class="col-xs-3">
            <p id="rainChance"></p>
        </div>

    </div>

</div>
<!-- end of weatherBox -->
