
<!-- getAdviceForm container -->
<div class="col-xs-4 col-sm-4 col-md-4 transbox" id="getAdviceForm">
    <form class="form" action="/getAdvice" method="post">
        <br>
        <div class="well well-sm flex-container-center">
            <p id="city"></p>
        </div>
        <div class="well well-lg">
            <p id="adviceText">Watching the bats fly at dusk from the Lady Bird Lake bridge on S. Congress is amazing. You can watch from the bridge or from the water. Watch out for guano if you're down below!
            </p>
            <p id="author">Karen K. - resident since 2005</p>

        </div>
        <div class="form-group">
            <label for="adviceSelect" class="control-label"><i class="fa fa-comments-o orange" aria-hidden="true"></i>&nbsp;&nbsp;Change Type of Advice</label>
            <select class="form-control">
                <option>Things to do</option>
                <option>Things to avoid</option>
                <option>Things to eat</option>
            </select>
        </div>
        <div class="form-group btn-lg btn-block">
            <button class="btn btn-lg btn-block" type="button" name="moreAdvice" id="moreAdvice"><i class="fa fa-plane" aria-hidden="true"></i>&nbsp;&nbsp;Get more advice</button>
        </div>
    </form>
</div>
<!-- end getAdviceForm -->
<!-- weatherBox container -->
<div class="col-xs-2 col-sm-2 col-md-2 transbox" id="weatherBox">

    <h4>Typical Weather for</h4>
    <h3 id="monthTxt"></h3>
    <h4>High Temperatures</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/hot.png" alt="sun icon" />
        </div>
        <div class="col-xs-4">
            <p id="highF"></p>
        </div>
        <div class="col-xs-4">
            <p id="highC"></p>
        </div>
    </div>

    <h4>Low Temperatures</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/cold.png" alt="snow icon" />
        </div>
        <div class="col-xs-4">
            <p id="lowF"></p>
        </div>
        <div class="col-xs-4">
            <p id="lowC"></p>
        </div>
    </div>

    <h4>Chance of Rain</h4>
    <div class="row">
        <div class="col-xs-2">
            <img class="weatherIcon" src="/img/rain.png" alt="rain icon" />
        </div>
        <div class="col-xs-2">
            <p></p>
        </div>
        <div class="col-xs-3">
            <p id="rainChance"></p>
        </div>

    </div>

</div>
<!-- end of weatherBox -->
