<!-- login form -->
<div class="col-xs-4 col-sm-4 col-md-4 transbox" id="loginForm">
    <form class="form" action="/auth/login" method="POST">
        <div class="form-group">
            <br>
            <label for="userName" class="control-label">User Name</label>
            <input type="text" class="form-control" name="userName">
        </div>
        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group btn-lg btn-block">
            <button class="btn btn-lg btn-block" type="submit" name="loginSubmit" id="loginSubmit"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;&nbsp;Log In</button>
        </div>
        <div class="form-group flex-container-center">
            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Forgot password?</a>
        </div>
    </form>
</div>

<!-- end loginForm -->
