<!-- signup form -->
<div class="col-xs-4 col-sm-4 col-md-4 transbox" id="signupForm">
    <form class="form" action="index.html" method="post">
        <div class="form-group">
            <br>
            <label for="user" class="control-label">Name</label>
            <input type="text" class="form-control" name="signupName" required>
            <p id="usernameAlert"></p>
        </div>
        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <input type="password" class="form-control" name="signupPW" required>
            <p id="pwAlert"></p>
        </div>
        <div class="form-group">
            <label for="pwAgain" class="control-label">Re-Type Password</label>
            <input type="password" class="form-control" name="pwAgain" required>
            <p id="pwMatch"></p>
        </div>
        <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="text" class="form-control" name="signupEmail" required>
            <p id="emailCheck"></p>
        </div>
        <div class="form-group">
            <label for="imgUrl">Profile Picture</label>
            <input type="file" id="profilePic">
            <p class="help-block">Upload a profile picture. File should be no larger than 5MB</p>
        </div>
        <div class="form-group btn-lg btn-block">
            <button class="btn btn-lg btn-block" type="button" id="signupSubmit"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;&nbsp;Sign Up</button>
        </div>
    </form>
</div>
<!-- end signupForm -->
