<!--  profile page -->

  <div class="transbox">
    <h1>Administrator Page</h1>
    <div class="container">
      <div class="row">
        <div>
          <table class="table table-striped table-responsive table-bordered" id="postTable">
            <a href="#userTable">Jump to users table</a>
            <caption>Posts</caption>
          <thead>
            <th style="width:10%">User ID</th>
            <th style="width:60%">Advice</th>
            <th style="width:15%">Delete</th>
            <th style="width:15%">Approve</th>
          </thead>
          <tbody>
            {{#each posts}}
              <tr>
                <td> {{this.user_id}}</td>
                <td> {{this.advice_text}}</td>
                <td> <form action="/admin?_method=DELETE" method="POST">DELETE BUTTON GOES HERE.</td>
                <td> <input type="checkbox" name="postApproved">&nbsp;&nbsp;Approve Post</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <table class="table table-striped table-responsive table-bordered" id="userTable">
          <a href="#postTable">Back to top</a>
          <caption>Users</caption>
          <thead>
            <th style="width:10%">User ID</th>
            <th style="width:20%">Full Name</th>
            <th style="width:30%">Email</th>
            <th style="width:30%">Profile Image URL</th>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <td> {{this.id}}</td>
                <td> {{this.full_name}}</td>
                <td> {{this.email}}</td>
                <td> {{this.img_url}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        </div>



      </div>
    </div>
  </div>

<!-- end profile page -->
